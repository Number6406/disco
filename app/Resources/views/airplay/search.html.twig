{% block title %}Navigation Airplays{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}

<style type="text/css">

.table tbody:hover {
	cursor: pointer;
}

</style>

<h1>Liste des 50 derniers Airplays <a href="{{path('createAirplay')}}" class="btn btn-success">Nouvel Airplay</a></h1>

{% if airplays %}
<div class="responsive-table">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Date</th>
				<th>Nom</th>
				<th>Publication ?</th>
			</tr>	
		</thead>
		<form method="post" action="">
		{% for airplay in airplays %}
			<tr onclick="seeAirplay({{airplay.airplay}})">
				<td>{{airplay.dmodif|date("d/m/Y")}}</td>
				<td>{{airplay.libelle}}</td>
				<td><input type="checkbox" name="publie" value="{{airplay.airplay}}" {% if airplay.publie == 1 %}checked{% endif %}></td>
			</tr>
		{% endfor %}
		
	</table>
		<button type="submit" class="btn btn-success pull-right">Enregistrer</button>
		</form>
</div>
<iframe src="{{path('showAirplay',{'id':airplays[0].airplay})}}" style="border:none;width:100%;height:400px;"></iframe>
{% endif %}


{% endblock %}

{% block javascripts %}
<script type="text/javascript">
	function seeAirplay (airplay) {
		$("iframe").attr('src','/airplay/show/'+airplay);
	}
</script>
{% endblock %}

